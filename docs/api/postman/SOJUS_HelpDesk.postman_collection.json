    {
      "name": "1. Autenticación",
      "description": "Módulo de autenticación JWT",
      "item": [
        {
          "name": "Login — ADMIN",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200 OK', function() { pm.response.to.have.status(200); });",
                  "pm.test('Response contiene token', function() {",
                  "  var json = pm.response.json();",
                  "  pm.expect(json.token).to.be.a('string').and.not.empty;",
                  "  pm.expect(json.username).to.eql('admin');",
                  "  pm.expect(json.role).to.eql('ADMINISTRADOR');",
                  "  pm.collectionVariables.set('token_admin', json.token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api", "auth", "login"] }
          }
        },
